<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	This defines the extension for defining vernacular names as extensions to a Taxon core object
	An instance of this represents a http://rs.gbif.org/ecat/class/VernacularName
	
	This has the dependency on thesauri:
		- language code:  http://rs.gbif.org/thesaurus/languageCode.xml
-->
<extension xmlns="http://ipt.gbif.org/extension/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ipt.gbif.org/extension/ http://gbrds.gbif.org/resources/schemas/extension.xsd" 
    title="Vernacular Name 2" name="VernacularName" namespace="http://rs.gbif.org/ecat/terms/v2">
    
    <property name="vernacularName" namespace="http://rs.gbif.org/ecat/terms/" qualName="http://rs.gbif.org/ecat/terms/vernacularName" required="true"/>
    <property name="language" namespace="http://purl.org/dc/terms/" qualName="http://purl.org/dc/terms/language" thesaurus="http://gbrds.gbif.org/resources/thesauri/lang.xml" columnLength="3"/>
    <property name="area" namespace="http://rs.gbif.org/ecat/terms/" qualName="http://rs.gbif.org/thesaurus/area" />
    <property name="areaSource" namespace="http://rs.gbif.org/ecat/terms/" qualName="http://rs.gbif.org/thesaurus/areaSource" columnLength="128"/>
    <property name="preferred" namespace="http://rs.gbif.org/ecat/terms/" qualName="http://rs.gbif.org/ecat/terms/preferred" columnLength="1"/>
    
    <property name="Continent" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/Continent" columnLength="64"/>
    <property name="Waterbody" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/Waterbody" columnLength="128"/>
    <property name="IslandGroup" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/IslandGroup" columnLength="128"/>
    <property name="Island" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/Island" columnLength="128"/>
    <property name="Country" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/Country" columnLength="128"/>
    <property name="CountryCode" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/CountryCode" thesaurus="http://gbrds.gbif.org/resources/thesauri/country-code.xml" columnLength="3"/>
    <property name="StateProvince" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/StateProvince" columnLength="128"/>
    <property name="County" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/County" columnLength="128"/>
    <property name="Locality" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/Locality" columnLength="1000"/>
</extension>