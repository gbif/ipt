<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Constants -->
    <constant name="struts.devMode" value="false"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.action.extension" value="html"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.custom.i18n.resources" value="ApplicationResources,errors"/>
    <constant name="struts.multipart.maxSize" value="2097152"/>
    <constant name="struts.ui.theme" value="css_xhtml"/>
    <constant name="struts.codebehind.pathPrefix" value="/WEB-INF/pages/"/>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        
        <interceptors>
            <!-- Interceptor to handle allowing only admins to certain actions -->
            <interceptor name="adminOnly" class="adminInterceptor"/>
            <interceptor name="managerOnly" class="managerInterceptor"/>
            <!-- Interceptor to select the external routing datasource -->
            <interceptor name="datasource-selector" class="datasourceInterceptor"/>
            <!-- Copied from struts-default.xml, changed validation exclude methods plus added second params interceptor for preparable() -->
            <interceptor-stack name="defaultStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="servlet-config"/>
                <interceptor-ref name="datasource-selector"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="debugging"/>
                <interceptor-ref name="profiling"/>
                <interceptor-ref name="scoped-model-driven"/>
                <interceptor-ref name="model-driven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="static-params"/>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">cancel,execute,delete,edit,list</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
            <interceptor-stack name="fileUploadStack">
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
            <interceptor-stack name="adminCheck">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="adminOnly"/>
            </interceptor-stack>
            <interceptor-stack name="managerStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="managerOnly"/>
            </interceptor-stack>
        </interceptors>

        <default-action-ref name="index" />

        <global-results>
            <!-- appfuse actions use mainMenu to redirect to the application homepage --> 
            <result name="mainMenu" type="redirect-action">/index</result>
            <result name="dataAccessFailure">/WEB-INF/pages/dataAccessFailure.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="org.springframework.dao.DataAccessException" result="dataAccessFailure"/>
        </global-exception-mappings>


        <action name="signup" class="signupAction">
            <result name="cancel" type="redirect">/</result>
            <result name="input">/WEB-INF/pages/signup.jsp</result>
            <result name="success" type="chain">saveSignup</result>
        </action>

        <action name="saveSignup" class="signupAction" method="save">
            <result name="input">/WEB-INF/pages/signup.jsp</result>
            <result name="success" type="redirect-action">/index</result>
        </action>

        <action name="editUser" class="userAction" method="edit">
            <interceptor-ref name="adminCheck"/>
            <result name="success">/WEB-INF/pages/userForm.jsp</result>
            <result name="input">/WEB-INF/pages/admin/userList.jsp</result>
        </action>

        <action name="editProfile" class="userAction" method="edit">
            <result name="success">/WEB-INF/pages/userForm.jsp</result>
            <result name="error">/WEB-INF/pages/index.jsp</result>
        </action>

        <action name="saveUser" class="userAction" method="save">
            <result name="cancel" type="redirect-action">admin/users</result>
            <result name="input">/WEB-INF/pages/userForm.jsp</result>
            <result name="success" type="redirect-action">admin/users</result>
        </action>


        <action name="passwordHint" class="passwordHintAction">
            <result name="input">/</result>
            <result name="success">/</result>
        </action>

        <action name="uploadFile" class="org.appfuse.webapp.action.FileUploadAction">
            <interceptor-ref name="fileUploadStack"/>
            <result name="input">/WEB-INF/pages/uploadForm.jsp</result>
            <result name="success">/WEB-INF/pages/uploadDisplay.jsp</result>
            <result name="cancel" type="redirect-action">index</result>
        </action>
        
        <!-- Application Home -->
        <action name="index" class="org.gbif.provider.webapp.action.IndexAction">
            <result>/WEB-INF/pages/index.jsp</result>
        </action>

    </package>



    <!-- Actions showing data to the public, anonymous users -->
    <package name="portal" namespace="/" extends="default">
        
        <!-- all resources! has to be changed once checklists are added -->
        <action name="resource" class="org.gbif.provider.webapp.action.portal.OccResourceAction">
            <result>/WEB-INF/pages/portal/occ/index.jsp</result>
        </action>

        <!-- occurrence actions -->
        <action name="occResources" class="org.gbif.provider.webapp.action.portal.OccResourceAction" method="list">
            <result>/WEB-INF/pages/portal/occ/resourceList.jsp</result>
        </action>
        <action name="occResource" class="org.gbif.provider.webapp.action.portal.OccResourceAction">
            <result>/WEB-INF/pages/portal/occ/index.jsp</result>
        </action>
        <action name="occResourceStatsBy*" class="org.gbif.provider.webapp.action.portal.OccResourceStatsAction" method="statsBy{1}">
            <param name="zoom">true</param>
            <param name="title">true</param>
            <param name="action">{1}</param>
            <result name="pie">/WEB-INF/pages/portal/stats.jsp</result>
            <result name="map">/WEB-INF/pages/portal/mapstats.jsp</result>
            <result name="chart">/WEB-INF/pages/portal/stats.jsp</result>
        </action>
        
        <!-- checklist actions -->
        <action name="taxResources">
            <result>/WEB-INF/pages/missing.jsp</result>
        </action>
        
        <!-- generic resource actions -->        
        <action name="resources">
            <result>/WEB-INF/pages/missing.jsp</result>
        </action>

    </package>
    
    <!-- undecorated AJAX calls needed by the portal -->
    <package name="portalAJAX" namespace="/ajax" extends="default">
        <action name="occResourceStatsBy*" class="org.gbif.provider.webapp.action.portal.OccResourceStatsAction" method="statsBy{1}">
            <param name="action">{1}</param>
            <result name="pie">/WEB-INF/pages/ajax/chartimg.jsp</result>
            <result name="map">/WEB-INF/pages/ajax/chartimg.jsp</result>
            <result name="chart">/WEB-INF/pages/ajax/chartimg.jsp</result>
        </action>
    </package>
    
    
    
    <!-- Base package for all managing packages  -->
    <package name="manage" namespace="/manage" extends="default">
        <default-interceptor-ref name="managerStack" />
    </package>
    
    <!-- Actions managing occurrence resources -->
    <package name="manageOcc" namespace="/manage/occ" extends="manage">
        <default-action-ref name="resources" />

        <global-results>
            <result name="error" type="redirect-action">resources</result>
        </global-results>
        
        
        <action name="resources" class="org.gbif.provider.webapp.action.OccResourceAction" method="list">
            <result>/WEB-INF/pages/manage/occ/occResourceList.jsp</result>
        </action>
        
        <action name="resource" class="org.gbif.provider.webapp.action.OccResourceAction">
            <result>/WEB-INF/pages/manage/occ/occResourceOverview.jsp</result>
        </action>
        <action name="addResource" class="org.gbif.provider.webapp.action.OccResourceAction" method="edit">
            <result>/WEB-INF/pages/manage/occ/resourceMetadataForm.jsp</result>
        </action>
        <action name="editResourceMetadata" class="org.gbif.provider.webapp.action.OccResourceAction" method="edit">
            <result>/WEB-INF/pages/manage/occ/resourceMetadataForm.jsp</result>
        </action>
        <action name="editResourceConnection" class="org.gbif.provider.webapp.action.OccResourceAction" method="edit">
            <result>/WEB-INF/pages/manage/occ/resourceConnectionForm.jsp</result>
        </action>
        
        <action name="saveResource" class="org.gbif.provider.webapp.action.OccResourceAction" method="save">
            <result name="success" type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${occResource.id}</param>
            </result>
            <result name="cancel" type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${resource_id}</param>
            </result>
            <result name="delete" type="redirect-action">resources</result>
        </action>

        <action name="editMapping" class="org.gbif.provider.webapp.action.ViewMappingAction" method="edit">
            <result>/WEB-INF/pages/manage/occ/mapping.jsp</result>
        </action>
        <action name="uploadMappingSource" class="org.gbif.provider.webapp.action.SourceFileUploadAction" method="upload">
            <result>/WEB-INF/pages/manage/occ/mapping.jsp</result>
            <result name="cancel" type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${resource_id}</param>
            </result>
        </action>
        <action name="saveMappingSource" class="org.gbif.provider.webapp.action.ViewMappingAction" method="saveSource">
            <result>/WEB-INF/pages/manage/occ/mapping.jsp</result>
            <result name="cancel" type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${resource_id}</param>
            </result>
        </action>

        <action name="saveMappingProperties" class="org.gbif.provider.webapp.action.ViewMappingAction" method="saveProperties">
            <result>/WEB-INF/pages/manage/occ/mapping.jsp</result>
            <result name="cancel" type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${resource_id}</param>
            </result>
        </action>

        <action name="upload" class="org.gbif.provider.webapp.action.UploadAction" method="upload">
            <result type="redirect-action">
                <param name="actionName">status</param>
                <param name="resource_id">${resource_id}</param>
            </result>
        </action>
        <action name="cancelUpload" class="org.gbif.provider.webapp.action.UploadAction" method="cancel">
            <result type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${resource_id}</param>
            </result>
        </action>
        <action name="process" class="org.gbif.provider.webapp.action.UploadAction" method="process">
            <result>/WEB-INF/pages/missing.jsp</result>
        </action>
        <action name="clear" class="org.gbif.provider.webapp.action.UploadAction" method="clear">
            <result>/WEB-INF/pages/missing.jsp</result>
        </action>
        <action name="status" class="org.gbif.provider.webapp.action.UploadAction" method="status">
            <result>/WEB-INF/pages/manage/occ/uploadStatus.jsp</result>
            <result name="ajax">/WEB-INF/pages/ajax/status.jsp</result>
            <result name="ready" type="redirect-action">
                <param name="actionName">resource</param>
                <param name="resource_id">${resource_id}</param>
            </result>
        </action>

        <action name="history" class="org.gbif.provider.webapp.action.UploadAction" method="history">
            <result>/WEB-INF/pages/manage/occ/uploadHistory.jsp</result>
        </action>
        

        <action name="validate">
            <result>/WEB-INF/pages/missing.jsp</result>
        </action>
        
</package>
    

    <!-- Actions managing checklist resources -->
    <package name="manageTax" namespace="/manage/tax" extends="manage">
    </package>
    
    <!-- Actions managing generic resources  -->
    <package name="manageRes" namespace="/manage/res" extends="manage">
    </package>
    

        <!-- Actions in this package will be prefixed with /admin/ -->
    <package name="admin" extends="default" namespace="/admin">
        <action name="activeUsers" class="com.opensymphony.xwork2.ActionSupport">
            <result>/WEB-INF/pages/admin/activeUsers.jsp</result>
        </action>
        <action name="users" class="userAction" method="list">
            <interceptor-ref name="adminCheck"/>
            <result>/WEB-INF/pages/admin/userList.jsp</result>
        </action>
        <action name="flushCache" class="com.opensymphony.xwork2.ActionSupport">
            <interceptor-ref name="adminCheck"/>
            <result>/WEB-INF/pages/admin/flushCache.jsp</result>
        </action>

        <action name="activeDatasources" class="org.gbif.provider.webapp.action.DatasourceRegistryAction" method="list">
            <interceptor-ref name="adminCheck"/>
            <result>/WEB-INF/pages/admin/datasourceList.jsp</result>
        </action>
        
        <action name="activeTasks">
            <interceptor-ref name="adminCheck"/>
            <result>/WEB-INF/pages/missing.jsp</result>
            <result name="tbd">/WEB-INF/pages/scheduler/jobList.jsp</result>
        </action>
        
        
        <!-- LogEvents -->
        <action name="logEvents" class="org.gbif.logging.webapp.action.LogEventAction" method="list">
            <result>/WEB-INF/pages/logging/logEventList.jsp</result>
        </action>
        
        <action name="editLogEvent" class="org.gbif.logging.webapp.action.LogEventAction" method="edit">
            <result>/WEB-INF/pages/logEventForm.jsp</result>
            <result name="error">/WEB-INF/pages/logging/logEventList.jsp</result>
        </action>
        
        <action name="saveLogEvent" class="org.gbif.logging.webapp.action.LogEventAction" method="save">
            <result name="input">/WEB-INF/pages/logging/logEventForm.jsp</result>
            <result name="cancel" type="redirect">logEvents.html</result>
            <result name="delete" type="redirect">logEvents.html</result>
            <result name="success" type="redirect">logEvents.html</result>
        </action>
        

        <!-- EXTENSIONS -->
        <action name="extension" class="org.gbif.provider.webapp.action.ExtensionAction">
            <result>/WEB-INF/pages/admin/extensionDetail.jsp</result>
        </action>
        
        <action name="extensions" class="org.gbif.provider.webapp.action.ExtensionAction" method="list">
            <result>/WEB-INF/pages/admin/extensionList.jsp</result>
        </action>
        
    </package>


    <include file="struts-logging.xml"/>
    <include file="struts-scheduler.xml"/>
    
</struts>
