        <action name="resources" class="org.gbif.provider.webapp.action.manage.MetaMetadataAction" method="list">
            <result type="freemarker">/WEB-INF/pages/portal/meta/index.ftl</result>
        </action>
        <action name="metaResource" class="org.gbif.provider.webapp.action.manage.MetaMetadataAction">
