<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>

  <!-- Dataset form validation -->
    <field name="eml.temporalCoverage.start">
        <field-validator type="requiredstring">
            <message key="errors.required"/>
        </field-validator>
    </field>
    <field name="eml.temporalCoverage.end">
        <field-validator type="fieldexpression">
            <param name="expression">eml.temporalCoverage.start &lt; eml.temporalCoverage.end</param>
            <message key="errors.endBeforeStartDate"/>
        </field-validator>
    </field>
    
</validators>