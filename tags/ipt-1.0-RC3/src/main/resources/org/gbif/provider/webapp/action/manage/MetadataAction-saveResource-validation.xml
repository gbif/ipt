<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="resource.title">
        <field-validator type="requiredstring">
            <message>Dataset title required</message>
        </field-validator>
    </field>
    <field name="resource.contactName">
        <field-validator type="requiredstring">
            <message>Contact required</message>
        </field-validator>
    </field>
    <field name="resource.contactEmail">
        <field-validator type="requiredstring">
            <message>Email contact required</message>
        </field-validator>
        <field-validator type="email">
            <message>Valid email required</message>
        </field-validator>
    </field>
</validators> 