<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	This defines the extension for defining vernacular names as extensions to a Taxon core object
	
	This has the dependency on thesauri:
	- language code:  http://gbrds.gbif.org/resources/thesauri/lang.xml
	- country codes:  http://gbrds.gbif.org/resources/thesauri/country-code.xml
	
-->
<extension xmlns="http://ipt.gbif.org/extension/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ipt.gbif.org/extension/ http://gbrds.gbif.org/resources/schemas/extension.xsd" 
    title="GNA Vernacular Names" name="VernacularName" namespace="http://rs.gbif.org/terms/1.0">
    
    <property name="vernacularName" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/vernacularName" required="true"/>
    <property name="source" namespace="http://purl.org/dc/terms/" qualName="http://purl.org/dc/terms/source" />
    <property name="language" namespace="http://purl.org/dc/terms/" qualName="http://purl.org/dc/terms/language" thesaurus="http://gbrds.gbif.org/resources/thesauri/lang.xml" columnLength="2" required="true"/>
    <property name="temporal" namespace="http://purl.org/dc/terms/" qualName="http://purl.org/dc/terms/temporal" />
    
    <property name="locationID" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/locationID" />
    <property name="locality" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/locality" />
    <property name="countryCode" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/countryCode" thesaurus="http://gbrds.gbif.org/resources/thesauri/country-code.xml" columnLength="2"/>

    <property name="sex" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/sex" columnLength="64"/>
    <property name="lifeStage" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/lifeStage" />
    <property name="organismPart" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/organismPart" />
    
    <property name="isPlural" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/isPlural" columnLength="5" />
    <property name="isPreferredName" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/isPreferredName" columnLength="5"/>
</extension>