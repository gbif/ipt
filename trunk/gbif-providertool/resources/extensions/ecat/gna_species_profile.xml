<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	This defines the extension for defining vernacular names as extensions to a Taxon core object
	
	This has the dependency on thesauri:
	- language code:  http://gbrds.gbif.org/resources/thesauri/lang.xml
	- country codes:  http://gbrds.gbif.org/resources/thesauri/country-code.xml
	
-->
<extension xmlns="http://ipt.gbif.org/extension/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ipt.gbif.org/extension/ http://gbrds.gbif.org/resources/schemas/extension.xsd" 
    title="GNA Vernacular Names" name="VernacularName" namespace="http://rs.gbif.org/terms/1.0">
    
    <property name="isMarine" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/isPlural" columnLength="5" thesaurus="http://rs.gbif.org/vocab/boolean.xml" />
    <property name="isExtinct" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/isExtinct" columnLength="5" />
    <property name="isHybrid" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/isHybrid" columnLength="5" />

    <property name="yearAppeared" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/yearAppeared" />
    <property name="yearExtinct" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/yearExtinct" />
    
    <property name="lifeForm" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/lifeForm" />
    <property name="ageInDays" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/ageInDays" />
    <property name="sizeInMillimeter" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/sizeInMillimeter" />
    <property name="weightInGram" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/weightInGram" />
    <property name="ageInDays" namespace="http://rs.gbif.org/terms/1.0" qualName="http://rs.gbif.org/terms/1.0/ageInDays" />
    
    <property name="sex" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/sex" />
    
    <property name="threatStatus" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/threatStatus" />
    <property name="habitat" namespace="http://rs.tdwg.org/dwc/terms/" qualName="http://rs.tdwg.org/dwc/terms/habitat" />

</extension>