<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/scripts/dojo/*</pattern>
        <pattern>/struts/dojo/*</pattern> 
        <pattern>/resources/*</pattern>
        <pattern>/data/*</pattern>
        <pattern>/tapir/*</pattern>
        <pattern>/tpr/*</pattern>
        <!-- default struts2 patterns -->
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <!-- myown -->
        <pattern>/index.*</pattern> 
        <pattern>*/ajax/*</pattern>        
    </excludes> 
    <decorator name="tapir-envelope" page="tapir.jsp"/>
    
    <decorator name="fullsize" page="fullsize.jsp"/>

    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>
