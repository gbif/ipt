<?xml version="1.0" encoding="UTF-8"?>
<!-- Convienence Ant Script for deploying the webapp -->
<project name="Web App Deploy" basedir="." default="deploy.ui">
    <!-- Load the project specific configurations -->
    <property file="${basedir}/project.properties"/>

	<property name="webserver.home" value="${basedir}/target/work/webapp/"/>

	<!-- Deploy reloadable sources - images, css. jsp etc-->
    <target name="deploy.ui">
        <echo level="info">Deploying</echo>
        <copy todir="${webserver.home}common">
            <fileset dir="src/main/webapp/common">
                <include name="**/*.*"/> 
            </fileset>  
        </copy>
        <copy todir="${webserver.home}decorators">
            <fileset dir="src/main/webapp/decorators">
                <include name="**/*.*"/> 
            </fileset>  
        </copy>
        <copy todir="${webserver.home}styles">
            <fileset dir="src/main/webapp/styles">
                <include name="**/*.*"/> 
            </fileset>  
        </copy>
        <copy todir="${webserver.home}images">
            <fileset dir="src/main/webapp/images">
                <include name="**/*.*"/> 
            </fileset>  
        </copy>
        <copy todir="${webserver.home}scripts">
            <fileset dir="src/main/webapp/scripts">
                <include name="**/*.*"/> 
            </fileset>  
        </copy>
        <copy todir="${webserver.home}WEB-INF/pages">
          <fileset dir="src/main/webapp/WEB-INF/pages">
              <include name="**/*.*"/> 
          </fileset>  
        </copy>    	
        <copy todir="${webserver.home}WEB-INF/classes" file="src/main/resources/struts.xml"/>
        <copy todir="${webserver.home}WEB-INF/classes">
            <fileset dir="target/classes">
                <include name="**/*.*"/> 
            </fileset>  
        </copy>			
    </target>

</project>