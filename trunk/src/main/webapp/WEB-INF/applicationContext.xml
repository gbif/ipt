<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="true">

    <bean id="datasourceRegistry" class="org.gbif.provider.datasource.DatasourceRegistry">
    </bean>

    <!-- for testing the abstract routing datasource -->
    <bean id="externalResourceRoutingDatasource" class="org.gbif.provider.datasource.ExternalResourceRoutingDatasource">
        <property name="targetDataSources">
            <map key-type="java.lang.String">
                <entry key="pontaurus" value-ref="pontaurusDataSource"/>
                <entry key="biocase" value-ref="biocaseDataSource"/>
            </map>
        </property>
    </bean>
    <bean id="parentDataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource" abstract="true">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="username" value="root"/>
    </bean>
    
    <bean id="pontaurusDataSource" parent="parentDataSource">
        <property name="url" value="jdbc:mysql://localhost/pontaurus"/>
    </bean>
    <bean id="biocaseDataSource" parent="parentDataSource">
        <property name="url" value="jdbc:mysql://localhost/biocase_training"/>
    </bean>
    
    
    <bean id="externalDatasourceResourceDao" class="org.appfuse.dao.hibernate.GenericDaoHibernate">
        <constructor-arg value="org.gbif.provider.model.ExternalDatasourceResourceBase"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="occResourceDao" class="org.appfuse.dao.hibernate.GenericDaoHibernate">
        <constructor-arg value="org.gbif.provider.model.OccurrenceResource"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="datasourceInspection" class="org.gbif.provider.dao.jdbc.DatasourceInspectionImpl">
        <property name="dataSource" ref="externalResourceRoutingDatasource"/>
    </bean>
    
    <!-- Add new DAOs here -->


    <bean id="occResourceManager" class="org.appfuse.service.impl.GenericManagerImpl">        
        <constructor-arg ref="occResourceDao"/>
    </bean>    
    <!-- Add new Managers here -->

</beans>