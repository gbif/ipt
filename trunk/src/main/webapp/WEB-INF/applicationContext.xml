<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="true">

    <bean id="datasourceRegistry" class="org.gbif.provider.datasource.DatasourceRegistry">
    </bean>

    <bean id="occResourceDao" class="org.appfuse.dao.hibernate.GenericDaoHibernate">
        <constructor-arg value="org.gbif.provider.model.OccurrenceResource"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <!-- Add new DAOs here -->


    <bean id="occResourceManager" class="org.appfuse.service.impl.GenericManagerImpl">        
        <constructor-arg ref="occResourceDao"/>
    </bean>    
    <!-- Add new Managers here -->

</beans>